{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue","src/**/*.ts" , "global/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "es2022"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "composite": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
  }
}
